<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.main.MainFragment">

    <TextView
        android:id="@+id/quiz_question_field"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:text="What is the largest city
        and commercial capital of Sri Lanka?"
        android:textSize="20sp"
        android:textColor="#1A051D"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/container_multiple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/quiz_question_field">

        <TextView
            android:id="@+id/quiz_question_answer_1_1"
            style="@style/QuizQuestionAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_big_margin_2"
            android:background="@drawable/bg_answer_quiz"
            android:text="True"
            android:textColor="@color/colorBlue"
            app:layout_constraintTop_toBottomOf="@+id/quiz_question_field"/>

        <TextView
            android:id="@+id/quiz_question_answer_2_2"
            style="@style/QuizQuestionAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_margin_2"
            android:background="@drawable/bg_answer_quiz_1"
            android:text="Moratuwa"
            android:textColor="@color/colorBlue"
            app:layout_constraintTop_toBottomOf="@+id/quiz_question_answer_1" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_boolean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/quiz_question_field">

        <TextView
            android:id="@+id/quiz_question_answer_1"
            style="@style/QuizQuestionAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_big_margin_2"
            android:background="@drawable/bg_answer_quiz"
            android:text="Colombo"
            android:textColor="@color/colorBlue"
            app:layout_constraintTop_toBottomOf="@+id/quiz_question_field"/>

        <TextView
            android:id="@+id/quiz_question_answer_2"
            style="@style/QuizQuestionAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_margin_2"
            android:background="@drawable/bg_answer_quiz_1"
            android:text="Moratuwa"
            android:textColor="@color/colorBlue"
            app:layout_constraintTop_toBottomOf="@+id/quiz_question_answer_1" />


        <TextView
            android:id="@+id/quiz_question_answer_3"
            style="@style/QuizQuestionAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_margin_2"
            android:background="@drawable/bg_answer_quiz_1"
            android:text="Negombo"
            android:textColor="@color/colorBlue"
            app:layout_constraintTop_toBottomOf="@+id/quiz_question_answer_2" />

        <TextView
            android:id="@+id/quiz_question_answer_4"
            style="@style/QuizQuestionAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_margin_2"
            android:background="@drawable/bg_answer_quiz_1"
            android:text="Kandy"
            android:textColor="@color/colorBlue"
            app:layout_constraintTop_toBottomOf="@+id/quiz_question_answer_3" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

